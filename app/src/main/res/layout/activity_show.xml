<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/subnetText"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@+id/ipText"
        app:layout_constraintLeft_toRightOf="@+id/subnetView"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/ipText"
        android:layout_width="140dp"
        android:layout_height="40dp"
        tools:layout_editor_absoluteY="-2dp"
        app:layout_constraintLeft_toRightOf="@+id/ipView"
        android:layout_marginLeft="24dp" />

    <TextView
        android:id="@+id/subnetView"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:text="subnetMask is"
        app:layout_constraintTop_toBottomOf="@+id/ipView"
        tools:layout_editor_absoluteX="0dp" />

    <TextView
        android:id="@+id/ipView"
        android:layout_width="117dp"
        android:layout_height="40dp"
        android:text="IP address is"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-2dp" />

    <Button
        android:id="@+id/returnBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="返回"
        app:layout_constraintTop_toBottomOf="@+id/subnetView"
        android:layout_marginRight="24dp"
        app:layout_constraintRight_toRightOf="@+id/subnetView" />
</android.support.constraint.ConstraintLayout>